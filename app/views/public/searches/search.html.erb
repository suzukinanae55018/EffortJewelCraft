<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1>検索結果一覧</h1>
        <% if @range == "DiaryRecord" %>
      <h2>DiaryRecords search for "<%= params[:word] %>"</h2>
        <% elsif @range == "User" %>
      <h2>Users search for "<%= params[:word] %>"</h2>
        <% end %>
      
      <table class="table table-hover table-inverse">
        <!--検索対象モデルがUser -->
        <% if @range == "User" %>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_profile_image(100, 100) %><br/>
                    <%= user.name %>
                  <%end%>
                </td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
          <%= paginate @users %>
        <% elsif @range == "DiaryRecord" %>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>投稿内容</th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @diary_records.each do |diary_record| %>
              <tr>
                <td>
                  <%= link_to user_path(diary_record.user) do %>
                    <%= image_tag diary_record.user.get_profile_image(100, 100) %><br/>
                    <%= diary_record.user.name %></td>
                  <% end%>
                <td><%= link_to diary_record.title, diary_record_path(diary_record.id) %></td>
                <td><%= diary_record.body %></td>
                <td><%= image_tag diary_record.get_diary_record_image(100, 100) %></td>
                  <!--後で背景を選べるようにする-->
                <td><%= image_tag diary_record.get_background_image(100, 100) %></td>
              </tr>
            <% end %>
          </tbody>
          <%= paginate @diary_records %>
        <% end %>
      </table>
    </div>
  </div>
</div>