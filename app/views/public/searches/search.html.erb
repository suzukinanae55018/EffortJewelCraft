<h1>検索結果一覧</h1>
  <% if @range == "DiaryRecord" %>
<h2>DiaryRecords search for "<%= params[:word] %>"</h2>
  <% elsif @range == "User" %>
<h2>Users search for "<%= params[:word] %>"</h2>
  <% end %>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUser -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100, 100) %><br/>
            <%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "DiaryRecord" %>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @diary_records.each do |diary_record| %>
        <tr>
          <td>
            <%= image_tag diary_record.user.get_profile_image(100, 100) %><br/>
            <%= diary_record.user.name %></td>

          <td><%= diary_record.title %></td>
          <td><%= diary_record.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>