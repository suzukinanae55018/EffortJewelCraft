<%= form_with model: group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'form-control', placeholder: "30文字以内" %>
  </div>

  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control', placeholder: "300文字以内" %>
  </div>

  <div class="form-group">
    <%= f.label :テーマ %>
    <%= f.text_field :theme, class: 'form-control', placeholder: "100文字以内" %>
  </div>

  <div class="form-group">
    <%= f.label :ルール %>
    <%= f.text_field :rule, class: 'form-control', placeholder: "100文字以内" %>
  </div>

  <div class="form-group">
    <%= f.label :画像（任意） %>
    <%= f.file_field :group_image, class: "form-control-file" , accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.submit '登録する',class: 'btn btn-info' %>
  </div>
<% end %>