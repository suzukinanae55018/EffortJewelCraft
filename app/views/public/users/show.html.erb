<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <% if @user == current_user %>
        <h3 class="mt-3">マイページ</h3>
      <% else %>
        <h3 class="mt-3">ユーザー詳細</h3>
      <% end %>

      <table class='table'>
        <tbody>
          <tr>
            <%= image_tag @user.get_profile_image(100, 100), class: 'circle-image' %>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <% if @user == current_user && @user.email != "guest@example.com" %>
        <div class='row'>
        <%= link_to edit_user_path(@user), class: "col-12" do %>
          <div class="btn btn-outline-secondary btn-block mt-4">
          <i class="fa-solid fa-user-gear"></i>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
    <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>投稿</th>
        <th>タグ</th>
        <th>画像</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
          <% @diary_records.each do |diary_record| %>
          <tr>
            <td>
            <%= image_tag diary_record.user.get_profile_image(100, 100), class: 'circle-image' %><br/>
            <%= diary_record.user.name %>
            </td>
             <td><%= link_to diary_record.title, diary_record_path(diary_record.id) %></td>
            <td><%= diary_record.body %></td>
            <td><%= diary_record.category %></td>
            <td><%= image_tag diary_record.get_diary_record_image(100, 100)%></td>
          <!--後で背景を選べるようにする-->
          <td><%= image_tag diary_record.get_background_image(100, 100) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @diary_records %>
    </div>
  </div>
</div>