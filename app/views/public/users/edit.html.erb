<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>ユーザー情報編集</h3>
      <div>
      <% if @user.errors.any? %>
        <% if @user.errors.count > 1 %>
          <p><%= @user.errors.count %>errors prohibited this user info from being saved:</p>
        <% else %>
          <p><%= @user.errors.count %>error prohibited this user info from being saved:</p>
        <% end %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>

    <%= form_with model: @user, class: "form" do |f| %>
      <div class="form-group">
        <%= f.label :name, "ユーザー名" %><br>
        <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介", class: "mt-3" %><br>
        <%= f.text_field :introduction, class: "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.label :email, "Eメール" %><br>
        <%= f.text_field :email, class: "form-control" %><br>
      </div>
   <div>
      <span>
        <%= f.submit "更新", class: "btn btn-sm btn-success" %>
      </span>
    <% end %>
      <span class="float-right">
        <%= link_to "退会", user_path(current_user),class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "すべての情報が削除されます。本当に退会しますか？" } %>
      </span>
   </div>
  </div>
</div>