<div class="container">
  <div class="row">
    <%= form_with model: @user, class: "form" do |f| %>
      <div class="form-group">
        <%= f.label :name, "ユーザー名" %><br>
        <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介", class: "mt-3" %><br>
        <%= f.text_field :introduction, class: "form-control" %><br>
      </div>
    <div class="row">
      <div class="col">
        <%= f.submit "更新", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
      <div class="col">
        <%= link_to "退会", user_path(current_user),class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "すべての情報が削除されます。本当に退会しますか？" } %>
      </div>
    </div>
  </div>
</div>