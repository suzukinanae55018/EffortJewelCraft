<% if diary_record.favorited_by?(current_user) %>
  <p>
  <%= link_to diary_record_favorite_path(diary_record), method: :delete, remote: true do %>
     <span style="color: red;">♥<%= diary_record.favorites.count %></span>
  <% end %>
  </p>
<% else %>
  <p>
  <%= link_to diary_record_favorite_path(diary_record), method: :post, remote: true do %>
    ♡<%= diary_record.favorites.count %>
  <% end %>
  </p>
<% end %>