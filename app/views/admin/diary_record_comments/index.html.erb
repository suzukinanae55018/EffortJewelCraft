<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h3>コメント投稿一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>コメント</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td>
              <%= link_to admin_user_path(comment.user.id) do %>
                <%= image_tag comment.user.get_profile_image(100, 100), class: 'circle-image' %><br/>
                <%= comment.user.name %>
              <% end %>
              <td><%= comment.comment %></td>
              </td>
              <td><%= link_to "削除", admin_diary_record_diary_record_comment_path(comment.diary_record_id, comment.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @comments %>