<div class= "container py-5 px-sm-0">
<% if @reports.blank? %>
 <h4 class= "col-4 offset-4 mt-5 background text-center">報告はありません</h4>
<% end %>
<% @reports.each do |report| %>
  <div class= "row">
    <div class="col-lg-8 col-12 offset-lg-2">
     <div class="col-12 table-responsive-sm">
      <table class="table text-nowrap table-bordered">
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>投稿</th>
            <th>タグ</th>
            <th>画像</th>
            <th>背景画像</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

            <tr>
              <td>
              <%= link_to admin_user_path(report.diary_record.user) do %>
                <%= image_tag report.diary_record.user.get_profile_image(100, 100), class: 'circle-image' %><br/>
                <%= report.diary_record.user.name %>
              <% end %>
              </td>
              <td style="width: 130px;"><%= report.diary_record.title %></td>
              <td><%= report.diary_record.body %></td>
              <td><%= report.diary_record.category %></td>
              <td><%= image_tag report.diary_record.get_diary_record_image(100, 100) %></td>

            <td><%= image_tag report.diary_record.get_background_image(100, 100) %></td>
            <td id="comment_counter">
              <%= render "public/diary_record_comments/counter", diary_record: report.diary_record %>
            </td>
            <td><%= link_to "削除", admin_diary_record_path(report.diary_record), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
            </tr>

        </tbody>
      </table>
      <%= paginate @reports, theme: 'bootstrap-5' %>
     </table>
     </div>
    </div>
  </div>
 <div class= "row justify-content-around text-center align-middle">
   <div class="col-lg-2 col-md-5 col-sm-4 col-8 mb-lg-5 my-sm-3 my-3 background"><%= report.diary_record.status %></div>
  <div class="col-lg-2 col-md-5 col-sm-4 col-8 mb-lg-5 my-sm-3 my-3 background"><span>投稿日　</span><%= report.diary_record.created_at.strftime('%Y/%m/%d') %></div>
 </div>
 <div class= "row">
   <div class= "col-lg-8 col-12 offset-lg-2">
    <div class="col-12 table-responsive-sm">
      <table class="table text-nowrap table-bordered">
        <!-- 報告者のテーブル -->
      </table>
    </div>
   </div>
 </div>
 <div class= "row">
  <div class="col-md-2 col-6 offset-md-8 offset-3 mb-4 mt-lg-0 mt-3 align-middle text-center background"><span>報告日　</span><%= report.created_at.strftime('%Y/%m/%d') %></div>
 </div>
<% end %>
  <div class="row justify-content-center">
     <%= paginate @reports %>
　</div>
</div>