<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 mx-auto">
    <h3 class="mt-3">グループ一覧</h3>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>テーマ</th>
          <th>ルール</th>
          <th>メンバー数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= image_tag group.get_group_image(100,100), class: 'circle-image' %><br />
                <%= group.name %></td>
            <td><%= group.introduction %></td>
            <td><%= group.theme %></td>
            <td><%= group.rule %></td>
            <td><%= group.group_users.count %></td>
            <td><%= link_to "削除", admin_group_path(group.id),class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @groups %>
    </div>
  </div>
</div>