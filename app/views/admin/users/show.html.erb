<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <h3 class="mt-3">ユーザー詳細</h3>

      <table class='table'>
        <tbody>
          <tr>
            <%= image_tag @user.get_profile_image(100, 100), class: 'circle-image' %>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <div class='row'>
      <%= link_to edit_admin_user_path(@user), class: "col-12" do %>
        <div class="btn btn-outline-secondary btn-block mt-4">
        <i class="fa-solid fa-user-gear"></i>
        </div>
      <% end %>
      </div>
    </div>

    <div class="col-md-8 mt-3">
      <% @diary_records.each do |diary_record| %>
        <!--後で背景を選べるようにする-->
        <div class="bg-image mb-3"><%= image_tag diary_record.get_background_image(200, 200), style: "width: 100%; border-radius: 10px;" %>
          <div class="overlay-text">
          <%= image_tag diary_record.user.get_profile_image(100, 100), class: 'circle-image' %><br/>
          <%= diary_record.user.name %>
          </div>
          <div class="overlay-text1"><%= link_to diary_record.title, diary_record_path(diary_record.id) %></div>
          <div class="overlay-text2"><%= diary_record.body %></div>
          <div class="overlay-text3">タグ：<%= diary_record.category %></div>
          <div class="overlay-image"><%= image_tag diary_record.get_diary_record_image(150, 120)%></div>
          <div class="overlay-text4">
            <td id="comment_counter">
              <%= render "public/diary_record_comments/counter", diary_record: diary_record %>
            </td>
          </div>
        </div>
      <% end %>
      <div class="col">
        <% if @user.email != "guest@example.com" %>
          <%= link_to "退会", admin_user_path(@user.id),class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "すべての情報が削除されます。本当に退会しますか？" } %>
        <% end %>
      </div>
    <%= paginate @diary_records %>
    </div>
  </div>
</div>