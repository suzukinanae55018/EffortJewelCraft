<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-image: url('<%= asset_path('blue.jpg') %>'); background-size: cover;background-repeat: no-repeat;">
    <div class="container">
      <a class="navbar-brand" href="/"><span><%= "EffortJewelCraft" %></span></a>
      <% if user_signed_in? %>
        <p class="mx-5 text-dark">ユーザー：<%= current_user.name %></p>
      <% elsif admin_signed_in? %>
        <p class="mx-5 text-danger">管理者画面<i class="fa-solid fa-triangle-exclamation text-warning"></i></p>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div class="d-flex flex-column w-100">
          <ul class="navbar-nav my-2 ml-auto flex-row">

          <% if admin_signed_in? %>
            <li class="nav-item ml-3">
              <%= link_to admin_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-wrench"></i> 管理者トップ
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <!--コメント投稿後に確認-->
            <li class="nav-item ml-3">
              <%#= link_to admin_diary_record_diary_record_comments_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-regular fa-comments"></i> コメント一覧
              <%# end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_groups_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-user-group"></i> グループ一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_diary_records_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-list"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>

          <% elsif user_signed_in? %>
            <li class="nav-item ml-3">
              <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-user-large"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to diary_records_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-list"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_diary_record_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-plus"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to users_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>

          <% else %>
            <li class="nav-item ml-3">
              <%= link_to about_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-house-chimney"></i> About
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to diary_records_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-list"></i></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li>
          <% end %>
          </ul>

          <%= form_with url: admin_path, method: :get, html: {class: "form-inline my-2 mt-lg-0 ml-auto"} do |f| %>
          <%= f.text_field :word, class: "form-control mr-sm-2" %>
          <%= f.submit "search", class: "btn btn-outline-light my-2 my-sm-0" %>
          <% end %>

        </div>
      </div>
    </div>
  </nav>
</header>