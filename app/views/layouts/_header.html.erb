<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-image: url('<%= image_url("blue_jewel.jpg") %>'); background-size: cover;background-repeat: no-repeat;">
    <div class="container">
      <a class="navbar-brand" href="/">
      <span style="font-size: 2em; text-shadow: 2px 3px 4px #666666; font-family: Georgia;">
      <%= "EffortJewelCraft" %>
      </span>
      </a>
      <!--ログインユーザー表記は必要に応じて反映する-->
      <%# if user_signed_in? %>
        <!--<p class="mx-4 text-dark"><%#= current_user.name %></p>-->
      <%# elsif admin_signed_in? %>
        <!--<p class="mx-4 text-danger">管理者画面<i class="fa-solid fa-triangle-exclamation text-warning"></i></p>-->
      <%# end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation" style="background-color: #96fafa;">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div class="d-flex flex-column w-100">
          <ul class="navbar-nav my-2 ml-auto flex-row">
          <!--管理者側-->
          <% if admin_signed_in? %>
            <li class="nav-item ml-3">
              <%= link_to admin_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-wrench"></i> 管理者トップ
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_diary_record_diary_record_comments_path(:diary_record_id), class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-regular fa-comments"></i> コメント一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_groups_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-user-group"></i> グループ一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_diary_records_path, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-list"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to admin_reports_path, class: 'nav-link text-dark' do %>
                <i class="fa-solid fa-triangle-exclamation"></i> 報告一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <i class="mr-1 fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>
          <!--ログインユーザー側-->
          <% elsif user_signed_in? %>
            <li class="nav-item ml-3">
              <%= link_to user_path(current_user), class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-user-large"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to diary_records_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-list"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_diary_record_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-plus"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to users_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to favorites_user_path(current_user), class: 'nav-link', style: 'color: #191970;' do %>
                <i class="fa-regular fa-heart"></i> いいね一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>
          <!--ログインしていない場合-->
          <% else %>
            <li class="nav-item ml-3">
              <%= link_to about_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-house-chimney"></i> About
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to diary_records_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-list"></i></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_user_registration_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>
            <li class="nav-item ml-3">
              <%= link_to new_user_session_path, class: 'nav-link', style: 'color: #191970;' do %>
                <i class="mr-1 fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li>
          <% end %>
          </ul>
          <!--通知機能-->
          <% if user_signed_in? %>
          <div class="dropdown ml-4" style="text-align: left;">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa-regular fa-bell"></i>&nbsp;通知
              <span class="badge" style="color: red;  border: 2px solid red; background-color: transparent;"><%= current_user.notifications.where(read: false).count %></span>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <% if current_user.notifications.where(read: false).any? %>
                <small class="dropdown-item disabled">直近5件の未読の通知を表示しています</small>
                <% current_user.notifications.where(read: false).limit(5).order(created_at: :desc).each do |notification| %>
                  <%= link_to notification_message(notification), notification_path(notification), method: :patch, class: "dropdown-item" %>
                <% end %>
              <% else %>
                <span class="dropdown-item disabled">未読の通知はありません</span>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>